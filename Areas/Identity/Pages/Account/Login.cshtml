@page
@model LoginModel

@{
    ViewData["Title"] = "Admin Inloggning";
}

<h2 class="text-center mt-4">Admin Inloggning</h2>

<div class="container my-4">
    <div class="form-container mx-auto" style="max-width: 400px;">
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">E-post</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="namn@exempel.se" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Lösenord</label>
                <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" placeholder="Lösenord" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label">Kom ihåg mig</label>
            </div>
            <button id="login-submit" type="submit" class="btn btn-custom w-100">Logga in</button>
            <div class="mt-3 text-center">
                <a id="forgot-password" asp-page="./ForgotPassword">Glömt lösenord?</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

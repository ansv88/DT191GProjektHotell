<!DOCTYPE html>

<html lang="sv">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Dalsjöns Gårdshotell</title>
    <link rel="stylesheet" href="~/app.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <!-- Logga (bild) till vänster -->
                <a class="navbar-brand position-relative" href="/">
                    <img src="/images/dalsjns-grdshotell-high-resolution-logo-transparent.png" alt="Dalsjöns Gårdshotell logga" class="logo-hang" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto gap-3">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Hem</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/vararum">Våra Rum</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/paketerbjudanden">Paket & Erbjudanden</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/restaurang">Restaurang</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/aktiviteter">Aktiviteter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/omoss">Om oss</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/kontakt">Kontakt</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="py-4">
        <div class="container">
            <div class="row">

                <div class="col-12 col-md-4 mb-3  text-center">
                    <h5>Hitta hit</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fa-solid fa-location-dot fa-sm"></i>
                            Adress:
                        </li>
                        <li class="mb-2">
                            Dalsjöns Gårdshotell
                        </li>
                        <li class="mb-2">
                            Dalsjövägen 1 <br /> 516 30 Dalsjöfors
                        </li>
                        <li class="mb-2">
                            <i class="fa-solid fa-phone fa-sm"></i>
                            Telefon: +46 712 345 678
                        </li>
                        <li>
                            <i class="fa-solid fa-envelope fa-sm"></i>
                            <a href="mailto:info@dalsjonsgardshotell.se" class=" text-black text-decoration-none">
                                E-post: info@dalsjonsgard.se
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="col-12 col-md-4 text-center mb-3">
                    <img src=/images/dalsjns-grdshotell-high-resolution-logo-transparent.png alt="Dalsjöns Gårdshotell logga"
                         style="max-height: 100px;" class="mb-3" />
                    <div>
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <a href="/Identity/Account/Logout" class="text-black">
                                <i class="fa-solid fa-unlock fa-xs"></i>
                                Admin - logga ut
                            </a>
                        }
                        else
                        {
                            <a href="/Identity/Account/Login?returnUrl=/admin/main" class="text-black">
                                <i class="fa-solid fa-lock fa-xs"></i>
                                Admin - logga in
                            </a>
                        }
                    </div>
                </div>

                <div class="col-12 col-md-4 mb-3 text-center">
                    <h5>Sitemap</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="/" class="text-black text-decoration-none">
                                Hem
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="/vararum" class="text-black text-decoration-none">
                                Våra Rum
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="/paketerbjudanden" class="text-black text-decoration-none">
                                Paket & Erbjudanden
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="/restaurang" class="text-black text-decoration-none">
                                Restaurang
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="/aktiviteter" class="text-black text-decoration-none">
                                Aktiviteter
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="/omoss" class="text-black text-decoration-none">
                                Om oss
                            </a>
                        </li>
                        <li>
                            <a href="/kontakt" class="text-black text-decoration-none">
                                Kontakt
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
